<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AvaloniaNumericUpDownTest.Controls">
  <Design.PreviewWith>
    <controls:NumberPicker />
  </Design.PreviewWith>

  <Style Selector="controls|NumberPicker">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <NumericUpDown Margin="4,0,0,0"
						 Width="120"
						 HorizontalAlignment="Left"
						 ShowButtonSpinner="False"
						 Value="{TemplateBinding RealValue}"/>
	  </ControlTemplate>
    </Setter>
  </Style>
</Styles>
